<section class="container-fluid bground d-flex flex-column justify-content-center">       
  <h3 class="mt-3 pt-5 mb-3 mx-auto">{{title}}</h3>
  <div id="password" class="container enter d-flex flex-column justify-content-center mx-auto mb-auto rounded-3 bg-white shadow border border-primary">
     
    <form  action="/password/{{ token }}"  method="POST" class="container-md d-flex flex-column justify-content-center">     
      <div class="mb-3">
         <input id="pass" name="pass" type="password" class="form-control border-0 border-bottom" placeholder="Введите новый пароль" required >
         </div>
        <input type="hidden" name="_csrf" value="{{csrf}}"> 

        <input type="hidden" name="token" value="{{token}}">

       <button type="submit" name="action" class="btn-enter">Отправить</button>
    </form>               
    <a class="mb-4 mt-2 mx-auto text-center text-decoration-none text-primary" href="/"><img src="../../images/arrow-left-blue.svg" class="arrow" alt="стрелка"> Вернуться на главную</a>
  </div>  
</section>